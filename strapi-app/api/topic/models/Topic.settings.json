{
  "connection": "default",
  "collectionName": "topic",
  "info": {
    "name": "topic",
    "description": ""
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "title": {
      "default": "",
      "type": "string",
      "required": true
    },
    "description": {
      "default": "",
      "type": "text",
      "required": true
    },
    "routines": {
      "unique": true,
      "collection": "routine",
      "via": "topics",
      "dominant": true
    },
    "answers": {
      "collection": "answer",
      "via": "topic"
    },
    "creator": {
      "model": "user",
      "via": "createdTopics",
      "plugin": "users-permissions"
    },
    "interestedUsers": {
      "collection": "user",
      "via": "interestedTopics",
      "dominant": true,
      "plugin": "users-permissions"
    }
  }
}